<%= stylesheet_link_tag    'pages', media: 'all', 'data-turbolinks-track': 'reload' %>
<nav class="navber navber-expand-md navbar-light bg-light sticky-top">
    <div class="container">
        <%= link_to root_path do %>
            <span><%= image_tag "logo/nia.png", class: "navbar-brand" %></span>
        <% end %>
        <ul class="nav justify-content-end">
          <% if log_in? %>
            <li class="nav-item">
              <%= link_to '新規登録', signup_users_path, class: 'signup btn btn-danger mr-2 ' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', login_path, class: 'login btn btn-outline-primary' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'マイページ', root_path, class: 'login btn btn-light' %>
            </li>
          <% end %>
        </ul>
    </div>
