<%= stylesheet_link_tag    'items', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= form_for :item, url: sell_path, html: {class: 'form-signin-login'} do |f| %>
    <div class="text-center mb-4">
        <%= link_to root_path do %>
            <span><%= image_tag "logo/nia.png", class: "navbar-brand mt-4 nia_log" %></span>
        <% end %>
        <h1 class="h3 mt-4 font-weight-normal">商品情報入力</h1>
    </div>

    <div class="form-group">
        <%= f.label :image_data %>
        <%= f.hidden_field :image, value: @item.cached_image_data %>
        <%= f.fields_for :item_images do |image| %>
            <%= image.file_field :image, multiple: true %>
        <% end %>
        <%# <%= f.file_field :image %> %>
    </div>

    <div class="form-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name, class: 'form-control', placeholder: '商品名' %>
    </div>

    <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.text_area :discription, class: 'form-control', placeholder: '説明。。。' %>
    </div>

    <div class="form-group">
        <%= f.label :商品価格 %>
        <%= f.text_field :price, class: 'form-control', placeholder: '¥300~¥999,999' %>
    </div>

    <%= f.submit "出品", class: 'btn btn-block btn-danger mt-4' %>
<%end%>