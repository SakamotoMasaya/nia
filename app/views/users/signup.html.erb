<%= stylesheet_link_tag    'users', media: 'all', 'data-turbolinks-track': 'reload' %>
<form class="form-signin">
    <div class="text-center mb-4">
        <%= link_to root_path do %>
            <span><%= image_tag "logo/nia.png", class: "navbar-brand mt-4 nia_log" %></span>
        <% end %>
        <h1 class="h3 mt-4 font-weight-normal">情報入力</h1>
    </div>

    <%= form_for @user do |f| %>
        <div class="form-label-group">
            <%# <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
            <label for="inputEmail">Email address</label> %>
            <%= f.label :name%>
            <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-label-group">
            <%= f.label :email%>
            <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-label-group">
            <%= f.label :password%>
            <%= f.text_field :password, class: 'form-control' %>
        </div>

        <%# <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div> %>
        <%= f.submit "登録", class: 'btn btn-block btn-danger' %>
        <%# <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2018</p> %>
    <%end%>
</form>

<div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'text-white' %>
            <%= f.text_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'text-white' %>
            <%= f.text_field :password_confirmation, class: 'form-control' %>
          </div>
          
          
          <%= f.submit "登録", class: 'btn-block btn-white' %>
        <% end %>
